<div class="row w-100" style="padding-top: 85px; padding-bottom: 20px;">

    {{#each student as |row index|}}
    <div>
        <div class="col-12 col-md-8 w-57" style="padding-right: 30px;">

            <h3 style="padding-left: 40px;">
                {{student.name}}
                <small>{{{editIcon1 student.user user student._id false}}}</small>
            </h3>
            <div class="card-content">
                {{!-- name --}}
                <div>
                    <a href="{{row._id}}">{{row.name}}</a>
                </div>
                <hr>
                {{!-- email --}}
                <div class="card-content">
                    <a href="{{row._id}}">{{row.email}}
                </div>
                {{!-- phone --}}
                <div class="card-content">
                    <td style="padding: 2px;">{{row.phone}}</td>
                </div>
                {{!-- status --}}
                <div class="card-content">
                    {{#eq row.status 'Paid'}}background-color: #28a745; color: #fff;
                    {{else}}background-color: #ff0000;
                    {{/eq}}">
                    <span class="dash-status">{{row.status}}</span>
                </div>
                {{!-- gender --}}
                <div class="card-content">
                    {{#eq row.gender 'M'}}background-color: color: #ffffff;
                    {{else}}background-color: #fffcb2 ;
                    {{/eq}}">
                    <span class="dash-gender">{{row.gender}}</span>
                </div>
                {{!-- email --}}
                <div class="card-content">
                    {{formatDate row.createdAt 'MMMM Do YYYY, h:mm:ss a'}}
                </div>
            </div>
        </div>

        <div class="col-12 col-md-4 w-25" style="padding: 20px;">
            <div class="card text-center">
                <div class="card-content">
                    <div style="padding-top: 10px;">
                        <span class="card-title">{{student.user.displayName}}</span>
                    </div>
                    <div style="padding: 7px;">
                        {{#if row.imageBase64}}
                        <img src='data:{{row.contentType}};base64,{{row.imageBase64}}' width="50"
                            class="rounded-circle img-fluid img-small" alt="student image"
                            style="height: 150px; width: 150px;">
                        {{else}}
                        <img src="images/no_image.png" width="50" class="img-thumbnail">
                        {{/if}}
                    </div>
                </div>
                <hr>
                <div class="card-action" style="padding-bottom: 13px;">
                    <button type="button" class="btn btn-primary link-unstyled text-decoration-none"
                        style="background-color: #3498db; border-color: #3498db;"
                        onclick="window.location.href='/news/user/{{student.user._id}}'">
                        More From {{student.user.firstName}}
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{/each}}

</div>