<div class="w-100" style="position: fixed; z-index: 100; ">
    {{> _newsheader}}
</div>
<div>
    {{> _create_btn}}
</div>


<h6 style=" padding-top:80px;"> Boardcasted News</h6>
<h3 style="padding-left:50px;">Welcome {{name}}</h3>

{{#if news}}
<table class="table table-striped w-100">
    <thead class="bg-secondary">
        <tr>
            <th>No. </th>
            <th>Image </th>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        {{#each news as |row index|}}
        <tr>
            <td style="padding: 2px;">{{index}}</td>
            <td style="padding: 2px;">
                {{#if row.image}}
                <img src="{{row.image}}" width="60" class="img-thumbnail">
                {{else}}
                <img src="images/no_image.png" width="50" class="img-thumbnail">
                {{/if}}
            </td>
            <td style="padding: 2px;"><a href="/news/{{row._id}}">{{row.title}}</a></td>
            <td style="padding: 2px;">{{formatDate row.createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
            <td style="padding: 2px;"><span class="dash-status">{{row.status}}</span></td>
            <td style="padding: 2px;">
                <div style="display: grid; gap: 10px; grid-template-columns: repeat(2, 1fr)">
                    <div>
                        <a href="/news/edit/{{row._id}}" class="btn p-2 btn-float bg-warning">
                            <i class="fas fa-edit btn-float "></i>
                        </a>
                    </div>
                    <div>
                        <form action="/news/{{row._id}}" method="POST" id="delete-form">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn bg-danger">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </div>
                </div>


            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{else}}
<p>There is no News Broadcasted yet</p>
{{/if}}