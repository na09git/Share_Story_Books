<div class="w-100" style="position: fixed; z-index: 100; padding-left :10px; padding-right:160px;">
    {{> _studentheader}}
</div>

<div style="padding:40px">
    <h3 class="display-4 " style=" padding-top:35px; padding-bottom:15px;  padding-left:50px;">Our
        Workers</h3>
    <form id="search-site" action='/worker/search/:query' method='get' class="mb-4"
        style="padding-right:50px; padding-left:50px;">
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-search fa-lg"></i></span>
            <div class="form-floating">
                <input id="search" type="search" name='query' class="form-control w-90" placeholder="Search by title">
                <label for="search">Search</label>
            </div>
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    <div class="row" style="padding: 30px;">
        {{#each worker}}
        <div class="col-12 col-md-4">
            <div class="card mb-4">
                <div class="card-img-top">
                    {{{editIcon user ../user _id}}}
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title">{{worker.name}}</h5>
                    <h5 class="card-title">{{worker.email}}</h5>
                    <h5 class="card-title">{{worker.phone}}</h5>
                    <h5 class="card-title">{{worker.salary}}</h5>
                    <h5 class="card-title">{{worker.gender}}</h5>

                    <div class="chip gap-0 ">
                        <img style="height: 35px; weight: 35px;" class="chip-img rounded" src="{{worker.image}}"
                            alt="{{worker.name}}">
                        <a style="text-decoration: none; background-color:#e9e0e0; border-radius:20px; padding-top:6px; padding-bottom:8px; padding-left:20px; padding-right:20px;"
                            href="/worker/user/{{user._id}}" class="chip-link">{{worker.displayName}}</a>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a href="/worker/{{_id}}" class="btn btn-secondary">Read More</a>
                </div>
            </div>
        </div>
        {{else}}
        <p class="col-12 text-center">No Worker to display</p>
        {{/each}}
    </div>

</div>