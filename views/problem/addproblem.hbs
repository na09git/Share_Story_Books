<div class="w-100" style="z-index: 99; ">
    {{> _problemheader}}
</div>

<h3 class="mt-3" style="padding-left: 140px; ">Add Problems</h3>

<div class="row p-2 ">
    <form action="/problem" method="POST" onsubmit="return validateForm()">
        <!--- 1 name--->
        <div class="mb-1 col-md-4 col-lg-2 col-xl-4 mx-auto">
            <label for="name" class="form-label" required>Name :</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" required>
        </div>
        <!--- 2 phone--->
        <div class="mb-1 col-md-4 col-lg-2 col-xl-4 mx-auto">
            <label for="phone" class="form-label ">Phone :</label>
            <input type="tel" class="form-control " id="phone" name="phone" placeholder="Enter phone">
        </div>
        <!--- 3 Case --->
        <div class="mb-1 col-md-4 col-lg-2 col-xl-4 mx-auto ">
            <label for="case" class="form-label">Case</label>
            <select class="form-select" id="case" name="case" required>
                <option value="Normal" selected>Normal</option>
                <option value="Worst">Worst</option>
            </select>
        </div>
        <!--- 4 grade --->
        <div class="mb-1 col-md-4 col-lg-2 col-xl-4 mx-auto ">
            <label for="grade" class="form-label">Grade</label>
            <select class="form-select" id="grade" name="grade" required>
                <option value="kg-1">kg-1</option>
                <option value="kg-2">kg-2</option>
                <option value="kg-3">kg-3</option>
                <option value="1" selected>1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
                <option value="11">11</option>
                <option value="12">12</option>
            </select>
        </div>
        <!--- 5 body--->
        <div class="mb-1 col-md-4 col-lg-2 col-xl-6 mx-auto">
            <label for="body" class="form-label">Tell us problem of our student</label>
            <textarea class="form-control" id="body" name="body" required></textarea>
        </div>
        <!--- 6 Action --->
        <div class="mb-3 col-md-6 col-lg-2 col-xl-4 mx-auto" style="padding-top: 10px;">
            <button type="submit" class="btn btn-primary">Add </button>
            <a href="/problems" class="btn btn-warning">Cancel</a>
        </div>
    </form>
</div>