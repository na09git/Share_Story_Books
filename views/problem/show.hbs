<div class="w-100" style="z-index: 100; position: fixed; ">
    {{> _problemheader}}
</div>
<div class="row w-100" style=" padding-top:85px; padding-bottom:20px; ">
    <div class="col-12 col-md-8 w-57" style=" padding-right:30px;">
        <h3 style="padding-left:40px;">{{problem.name}}
            <small>{{{editIcon1 problem.user user problem._id false}}}</small>
        </h3>
        <div class=" card problem">
            <div class="card-content">Name :
                {{{problem.name}}}
            </div>
            <hr>
            <div class="card-content">Family Phone :
                {{{problem.phone}}}
            </div>
            <hr>
            <div class="card-content">Grade :
                {{{problem.grade}}}
            </div>
            <hr>
            <div class="card-content">Case :
                {{{problem.case}}}
            </div>
            <hr>
            <div class="card-content">Student Problem :
                {{{problem.body}}}
            </div>
            <hr>
            <div class="card-content">Date :
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-4 w-25" style="padding: 20px;">
        <div class="card text-center">
            <div class="card-content">
                <div style="padding-top: 10px;">
                    <span class="card-title">{{problem.user.displayName}}</span>
                </div>
                <div style="padding: 7px;">
                    <img src="{{problem.user.image}}" class="rounded-circle img-fluid img-small"
                        alt="{{problem.user.displayName}}" style="height: 150px; width: 150px;">
                </div>

            </div>
            <hr>
            <div class="card-action" style="padding-bottom: 13px;">
                <button type="button" class="btn  btn-primary link-unstyled text-decoration-none"
                    style="background-color: #3498db; border-color: #3498db; "
                    onmouseover="this.style.backgroundColor='#2980b9'" onmouseout="this.style.backgroundColor='#3498db'"
                    onclick="window.location.href='/news/user/{{problem.user._id}}'">
                    More From {{problem.user.firstName}}
                </button>
            </div>
        </div>
    </div>
</div>